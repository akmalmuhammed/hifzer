{
  "name": "hifzer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate --config=./prisma.config.ts && next build",
    "start": "next start",
    "lint": "eslint",
    "lint:encoding": "node scripts/check-text-encoding.mjs",
    "lint:ci": "pnpm lint && pnpm lint:encoding",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:routing": "playwright test e2e/routing.public.spec.ts e2e/routing.auth.spec.ts e2e/routing.onboarding.spec.ts e2e/routing.legacy.spec.ts",
    "audit:clicks": "node scripts/click-routing-audit.mjs",
    "audit:mobile:overflow": "node scripts/mobile-overflow-audit.mjs",
    "quran:translation:sahih": "node scripts/generate-sahih-translation.mjs",
    "audio:manifest": "node scripts/generate-audio-manifest.mjs",
    "db:generate": "prisma generate --config=./prisma.config.ts",
    "db:migrate": "prisma migrate dev --config=./prisma.config.ts",
    "db:deploy": "prisma migrate deploy --config=./prisma.config.ts",
    "db:studio": "prisma studio --config=./prisma.config.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.4",
    "@neondatabase/serverless": "^1.0.2",
    "@paddle/paddle-node-sdk": "^3.6.0",
    "@prisma/adapter-neon": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@sentry/nextjs": "^10.39.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.2",
    "server-only": "^0.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.36",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.3.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^7.4.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
