generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PlanBias {
  BALANCED
  RETENTION
  SPEED
}

enum SubscriptionPlan {
  FREE
  PAID
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  PAST_DUE
  PAUSED
  CANCELED
}

enum SrsMode {
  NORMAL
  CONSOLIDATION
  CATCH_UP
}

enum MemorizationBand {
  ENCODING
  SABQI
  MANZIL
  MASTERED
}

enum GateType {
  WARMUP
  WEEKLY
  MONTHLY
}

enum GateOutcome {
  PASS
  FAIL
  SKIPPED
  REBALANCED
}

enum SessionStatus {
  OPEN
  COMPLETED
  ABANDONED
}

enum AttemptStage {
  WARMUP
  REVIEW
  NEW
  LINK
  WEEKLY_TEST
  LINK_REPAIR
}

enum ReviewPhase {
  STANDARD
  NEW_EXPOSE
  NEW_GUIDED
  NEW_BLIND
  WEEKLY_TEST
  LINK_REPAIR
}

enum SrsGrade {
  AGAIN
  HARD
  GOOD
  EASY
}

enum EmailDispatchStatus {
  PENDING
  SENT
  FAILED
  SKIPPED
  DRY_RUN
}

model UserProfile {
  id                    String   @id @default(cuid())
  clerkUserId           String   @unique
  timezone              String

  onboardingCompletedAt DateTime?

  dailyMinutes          Int
  practiceDays          Int[]
  reminderTimeLocal     String
  emailRemindersEnabled Boolean @default(true)
  emailUnsubscribedAt   DateTime?
  emailSuppressedAt     DateTime?
  planBias              PlanBias @default(BALANCED)

  activeSurahNumber     Int
  cursorAyahId          Int
  mode                  SrsMode  @default(NORMAL)
  hasTeacher            Boolean @default(false)

  avgReviewSeconds      Float @default(45)
  avgNewSeconds         Float @default(90)
  avgLinkSeconds        Float @default(35)

  reviewFloorPct        Int @default(70)
  consolidationThresholdPct Int @default(25)
  catchUpThresholdPct   Int @default(45)
  rebalanceUntil        DateTime?

  plan                  SubscriptionPlan   @default(FREE)
  paddleCustomerId      String?            @unique
  paddleSubscriptionId  String?            @unique
  subscriptionStatus    SubscriptionStatus?
  currentPeriodEnd      DateTime?

  darkMode              Boolean @default(false)
  themePreset           String  @default("standard")
  accentPreset          String  @default("teal")
  reciterId             String  @default("default")

  sessions              Session[]
  attempts              AyahAttempt[]
  reviews               AyahReview[]
  weakTransitions       WeakTransition[]
  reviewEvents          ReviewEvent[]
  gateRuns              QualityGateRun[]
  emailDispatches       EmailDispatch[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model EmailDispatch {
  id                String              @id @default(cuid())
  userId            String
  templateKey       String
  localDate         String
  status            EmailDispatchStatus @default(PENDING)
  provider          String
  providerMessageId String?
  errorCode         String?
  errorMessage      String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  user              UserProfile         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, templateKey, localDate])
  @@index([localDate, status])
  @@index([userId, createdAt])
}

model Session {
  id              String        @id @default(cuid())
  userId          String
  status          SessionStatus @default(OPEN)
  startedAt       DateTime      @default(now())
  endedAt         DateTime?
  localDate       String
  mode            SrsMode @default(NORMAL)
  reviewDebtMinutesAtStart Int @default(0)
  warmupPassed    Boolean?
  warmupRetryUsed Boolean @default(false)
  weeklyGateRequired Boolean @default(false)
  weeklyGatePassed Boolean?
  newUnlocked     Boolean @default(true)

  warmupAyahIds   Int[]
  reviewAyahIds   Int[]
  newStartAyahId  Int?
  newEndAyahId    Int?

  user            UserProfile   @relation(fields: [userId], references: [id], onDelete: Cascade)
  attempts        AyahAttempt[]
  reviewEvents    ReviewEvent[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, startedAt])
  @@index([userId, localDate])
  @@unique([userId, startedAt])
}

model AyahAttempt {
  id        String       @id @default(cuid())
  userId    String
  sessionId String
  ayahId    Int
  stage     AttemptStage
  grade     SrsGrade
  createdAt DateTime     @default(now())

  user      UserProfile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  session   Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([userId, ayahId, createdAt])
  @@index([sessionId, createdAt])
}

model AyahReview {
  id           String    @id @default(cuid())
  userId       String
  ayahId       Int
  band         MemorizationBand @default(ENCODING)
  checkpointIndex Int @default(0)
  nextIntervalMinutes Int @default(1440)
  lastDurationSec Int?

  station      Int       @default(1)
  intervalDays Int       @default(1)
  easeFactor   Float     @default(2.5)
  repetitions  Int       @default(0)
  lapses       Int       @default(0)

  nextReviewAt DateTime
  lastReviewAt DateTime?
  lastGrade    SrsGrade?

  user         UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ayahId])
  @@index([userId, nextReviewAt])
  @@index([userId, band, nextReviewAt])
}

model WeakTransition {
  id            String   @id @default(cuid())
  userId        String
  fromAyahId    Int
  toAyahId      Int

  attemptCount  Int      @default(0)
  failCount     Int      @default(0)
  successCount  Int      @default(0)
  successRateCached Float @default(0)

  lastOccurredAt DateTime
  nextRepairAt   DateTime?
  lastGrade      SrsGrade?
  resolvedAt    DateTime?

  user          UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, fromAyahId, toAyahId])
  @@index([userId, nextRepairAt])
}

model ReviewEvent {
  id          String      @id @default(cuid())
  userId      String
  sessionId   String
  surahNumber Int
  ayahId      Int
  stage       AttemptStage
  phase       ReviewPhase @default(STANDARD)
  grade       SrsGrade?
  durationSec Int         @default(0)
  fromAyahId  Int?
  toAyahId    Int?
  createdAt   DateTime    @default(now())

  user        UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  session     Session     @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, ayahId, createdAt])
  @@index([sessionId, createdAt])
}

model QualityGateRun {
  id          String      @id @default(cuid())
  userId      String
  gateType    GateType
  windowStart DateTime
  windowEnd   DateTime
  sampleSize  Int         @default(0)
  passRate    Float       @default(0)
  outcome     GateOutcome
  detailsJson Json?
  createdAt   DateTime    @default(now())

  user        UserProfile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, gateType, createdAt])
  @@index([userId, windowEnd])
}
